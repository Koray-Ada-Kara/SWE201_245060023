namespace Proje
{
    public class Ogrenci
    {
        // Member variables (auto-properties)
        public string Isim { get; set; }
        public int CalismaSaati { get; set; }

        // Empty constructor
        public Ogrenci()
        {
            Isim = "Bilinmiyor";
            CalismaSaati = 0;
        }

        // Constructor with parameters
        public Ogrenci(string isim, int calismaSaati)
        {
            Isim = isim;
            CalismaSaati = calismaSaati;
        }

        // Member function
        public void Calis()
        {
            CalismaSaati++;
        }

        // Override ToString()
        public override string ToString()
        {
            return "Isim: " + Isim + ", Calisma Saati: " + CalismaSaati;
        }
    }
}
